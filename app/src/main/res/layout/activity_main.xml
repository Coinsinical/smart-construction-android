<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUILinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"

    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:tb_leftImageResource="@null"
        app:tb_titleText="智慧工地" />

    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#50FFFFFF"

        app:xui_borderColor="?attr/xui_config_color_separator_light"
        app:xui_outerNormalColor="?attr/xui_config_color_background"
        app:xui_showBorderOnlyBeforeL="true">


        <GridLayout
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button1"
                android:layout_column="0"
                android:layout_row="0"
                android:text="安全帽"
                android:gravity="center"
                android:drawableTop="@drawable/risk"/>


            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button2"
                android:layout_column="1"
                android:layout_row="0"
                android:text="围挡"
                android:drawableTop="@drawable/fence"/>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button3"
                android:layout_column="2"
                android:layout_row="0"
                android:text="烟雾火焰"
                android:drawableTop="@drawable/smoke_fire" />

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button4"
                android:layout_column="0"
                android:layout_row="1"
                android:text="积水"
                android:drawableTop="@drawable/hydrops"/>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button5"
                android:layout_column="1"
                android:layout_row="1"
                android:text="跌倒"
                android:drawableTop="@drawable/fall"/>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button6"
                android:layout_column="2"
                android:layout_row="1"
                android:text="回填石块"
                android:drawableTop="@drawable/stone"/>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button7"
                android:layout_column="0"
                android:layout_row="2"
                android:text="管道缺陷"
                android:drawableTop="@drawable/pipe" />

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button8"
                android:layout_column="1"
                android:layout_row="2"
                android:text="围挡区域闯入"
                android:drawableTop="@drawable/intrude"/>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                style="@style/RoundButton.Grid"
                android:id="@+id/button9"
                android:layout_column="2"
                android:layout_row="2"
                android:text="办公人员脱岗"
                android:drawableTop="@drawable/offsite"/>

        </GridLayout>
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
</com.xuexiang.xui.widget.layout.XUILinearLayout>
